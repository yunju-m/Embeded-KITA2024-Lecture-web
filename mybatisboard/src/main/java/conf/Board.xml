<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board">
	
	<insert id="insertBoard" parameterType="Board">
		insert into board
		values(seq_board.nextval, #{btitle}, #{bcontent}, #{bwriter}, 0, sysdate, #{bsort}, #{cfn})
	</insert>
	
	<select id="selectAllBoards" parameterType="Search" resultMap="BoardResult">
		select *
		from board
		where 1=1
		<if test="bsort!=null">
			and bsort=#{bsort}
		</if>
		<if test="searchKeyword!=null and searchKeyword=='btitle'">
			and btitle like '%' || #{searchValue} || '%'
		</if>
		<if test="searchKeyword!=null and searchKeyword=='bcontent'">
			and bcontent like '%' || #{searchValue} || '%'
		</if>
		<if test="searchKeyword!=null and (searchKeyword!='btitle' and searchKeyword!='bcontent')">
			and (btitle like '%' || #{searchValue} || '%' or bcontent like '%' || #{searchValue} || '%')
		</if>
		order by bid desc
	</select>
	
	<select id="selectBoard" parameterType="Board" resultMap="BoardResult">
		select *
		from board
		where bid=#{bid}
	</select>
	
	<update id="updateBoard" parameterType="Board">
		update board
		set btitle=#{btitle}, bcontent=#{bcontent}, bsort=#{bsort}, cfn=#{cfn}
		where bid=#{bid}
	</update>
	
	<delete id="deleteBoard" parameterType="int">
		delete from board
		where bid=#{bid}
	</delete>
	
	<update id="updateCount" parameterType="int">
		update board
		set bcount=bcount+1
		where bid=#{bid}
	</update>

</mapper>